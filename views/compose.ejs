<%- include("partials/header") -%>

<h2 id="text_Top">Write your secrtes here without saying who you are! 🧐</h2>

<div class="form-width container">
    <form action="/compose" method="post">
      <div class="form-group mb-4">
        <label for="">Title</label>
        <input type="text" class="form-control" name="postTitle" />
      </div>
      
      <div class="form-group mb-4">
        <label for="">Date</label>
        <input type="date" class="form-control" name="dateGiven"/>
      </div>

      <div class="form-group mb-4">
        <label for="sel1" class="form-label">This one was</label>
        <select class="form-select form-control" id="sel1" name="feedBack">
          <option selected>🤗 Memorable!</option>
          <option>😄 Happy!</option>
          <option>😂 Funny!</option>
          <option>😯 Wow!</option>
          <option>😡 Angry!</option>
          <option>😢 Sad!</option>
          <option>❤️ Love!</option>
          <option>😞 Disappointment!</option>
          <option>🤡 Embarrassment!</option>
        </select>
      </div>
  
      <div class="form-group mb-4">
        <label for="">Describe It</label>
        <textarea
          type="text"
          class="form-control"
          name="postBody"
          rows="4"
          cols="30"
        ></textarea>
      </div>
      <div class="but">
        <button class="btn btn-success btn-md" type="submit " name="buton">
          Publish your secret
        </button>
      </div>
    </form>
  </div>